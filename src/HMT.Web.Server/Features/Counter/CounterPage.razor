@page "/counter"
@attribute [Authorize(Roles = $"{RoleNames.Admin}, {RoleNames.HandyMan}")]

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<p>This is shown to users with 'HandyMan' OR 'Admin' role.</p>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        var abc = $"{RoleNames.Admin}, {RoleNames.HandyMan}";
        currentCount++;
    }
}
