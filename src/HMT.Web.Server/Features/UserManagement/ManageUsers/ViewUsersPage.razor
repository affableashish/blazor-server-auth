@page "/users"

@attribute [HMTAuthorize(Permissions.ViewUsers | Permissions.ManageUsers)]

<PageTitle>Manage Users</PageTitle>

<h1>Manage Users</h1>

<table class="table table-striped table-hover w-75">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <HMTAuthorizeView Permissions="@Permissions.ManageUsers">
                        <a href="/user/edit/@user.Id">Edit</a>
                    </HMTAuthorizeView>
                </td>
            </tr>
        }
    </tbody>
</table>